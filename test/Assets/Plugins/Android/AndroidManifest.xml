<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

	<!-- İZİNLER -->
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
	

	<application
		android:usesCleartextTraffic="True"
		android:label="@string/app_name"
		android:icon="@mipmap/app_icon"
		android:allowBackup="false">
		
		


		<!-- SADECE TEK Activity: ÇAKIŞMALARI EZER -->
		<activity
			 android:name="com.unity3d.player.UnityPlayerGameActivity"
			android:theme="@style/BaseUnityGameActivityTheme"
			android:exported="true"
			android:launchMode="singleTask"
			android:resizeableActivity="false"
			android:configChanges="locale|fontScale|keyboard|keyboardHidden|mcc|mnc|navigation|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
			android:windowSoftInputMode="adjustNothing|stateHidden"
			tools:node="replace">

			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
				<!-- Quest/Meta kategorisi (opsiyonel ama zararsız) -->
				<category android:name="com.oculus.intent.category.VR" />
			</intent-filter>

			<!-- Unity/Quest meta verileri -->
			<meta-data android:name="unityplayer.UnityActivity" android:value="true" />
			<meta-data android:name="com.oculus.vr.focusaware" android:value="true" />
			<meta-data android:name="android.app.lib_name" android:value="game" />
		</activity>

		<!-- Quest cihaz desteği -->
		<meta-data android:name="com.oculus.ossplash.background" android:value="black" />
		<meta-data android:name="com.oculus.telemetry.project_guid" android:value="4d3b49dd-9fb8-4643-aa62-cd12fcd66a1a" />
		<meta-data android:name="com.oculus.supportedDevices"
				   android:value="quest2|questpro|quest3|quest3s"
				   tools:replace="android:value" />
	</application>

	<!-- Head tracking feature (Quest gereksinimi) -->
	<uses-feature android:name="android.hardware.vr.headtracking"
				  android:version="1"
				  android:required="true" />
</manifest>
